{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "standard",
    "flowtype"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "semi": [
      1,
      "never"
    ],
    "no-console": 0,
    "valid-jsdoc": 1,
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "no-tabs": [
      0
    ],
    "indent": [
      1,
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      1,
      "single",
      "avoid-escape"
    ],
    "comma-dangle": [
      1,
      "always-multiline"
    ],
    "comma-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "key-spacing": [
      1,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "flowtype/define-flow-type": 1,
    "flowtype/require-parameter-type": [
      1,
      {
        "excludeArrowFunctions": true
      }
    ],
    "flowtype/require-return-type": [
      0,
      "always",
      {
        "annotateUndefined": "never"
      }
    ],
    "flowtype/space-after-type-colon": [
      1,
      "always"
    ],
    "flowtype/space-before-type-colon": [
      1,
      "never"
    ],
    "flowtype/type-id-match": [
      0,
      "^([A-Z][a-z0-9]+)+Type$"
    ],
    "flowtype/use-flow-type": 1,
    "flowtype/valid-syntax": 1
  },
  "globals": {
    "require": true,
    "navigator": true,
    "setTimeout": true,
    "console": true,
    "describe": true,
    "it": true,
    "beforeEach": true,
    "expect": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}